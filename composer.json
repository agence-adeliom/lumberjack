{
    "name": "agence-adeliom/lumberjack",
    "license": "MIT",
    "authors": [
        {
            "name": "Arnaud RITTI",
            "email": "arnaud.ritti@adeliom.com"
        }
    ],
    "require": {
        "brick/event": "^0.1.1",
        "doctrine/annotations": "^1.6",
        "php": "^7.2||^8.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0"
    },
    "require-dev": {
        "nunomaduro/phpinsights": "^2.4",
        "phpunit/phpunit": "^9.5",
        "rareloop/lumberjack-core": "^4.0||^5.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.7",
        "symplify/monorepo-builder": "^11.1"
    },
    "autoload": {
        "files": [
            "packages/lumberjack-hooks/src/Helpers/RegisterAnnotations.php",
            "packages/lumberjack-hooks/src/Helpers/Utils.php"
        ],
        "psr-4": {
            "Adeliom\\Lumberjack\\Cron\\": "packages/lumberjack-cron/src",
            "Adeliom\\Lumberjack\\Event\\": "packages/lumberjack-events/src",
            "Adeliom\\Lumberjack\\Hooks\\": "packages/lumberjack-hooks/src",
            "YourMonorepo\\SecondPackage\\": "packages/second-package/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adeliom\\Lumberjack\\Cron\\Tests\\": "packages/lumberjack-cron/tests/",
            "Adeliom\\Lumberjack\\Event\\Tests\\": "packages/lumberjack-events/tests/",
            "Adeliom\\Lumberjack\\Hooks\\Tests\\": "packages/lumberjack-hooks/tests/"
        }
    },
    "replace": {
        "agence-adeliom/lumberjack-cron": "self.version",
        "agence-adeliom/lumberjack-events": "self.version",
        "agence-adeliom/lumberjack-hooks": "self.version",
        "your-monorepo/second-package": "self.version"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable"
}
